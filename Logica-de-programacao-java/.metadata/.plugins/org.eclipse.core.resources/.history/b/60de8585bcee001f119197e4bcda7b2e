package aula03;

import java.util.Scanner;

public class numerospares {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		System.out.print("Digite um número a seguir:");
		int numero_usuario = scanner.nextInt();
		int contador = 0;

		while (contador <= numero_usuario) {
			contador++;
			if (contador % 2 == 0) {
				System.out.print(" " + contador);
				System.out.print("Os números são pares!");
			} else {
				System.out.print(" " + contador);
				Sysem.out.print("Os números são ímpares!");
			}
		}
		System.out.print(Os números é pares!)
	}
}
